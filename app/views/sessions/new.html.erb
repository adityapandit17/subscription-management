<div class="min-h-screen flex items-center justify-center bg-gradient-to-r">
  <div class="max-w-md w-full space-y-8 bg-white p-10 rounded-xl shadow-md">
    <div>
      <h1 class="mt-2 text-center text-4xl font-extrabold text-gray-900">
        Welcome Back
      </h1>
      <p class="mt-2 text-center text-sm text-gray-600">
        Sign in to manage your subscriptions
      </p>
    </div>
    <%= form_with url: login_path, method: :post, class: "mt-8 space-y-6" do |f| %>
      <input type="hidden" name="remember" value="true">
      <div class="rounded-md -space-y-px">
        <div class="mb-4">
          <%= f.label :email, "Email address", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.email_field :email, class: "appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm", placeholder: "you@example.com" %>
        </div>
        <div class="mb-4">
          <%= f.label :password, "Password", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.password_field :password, class: "appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm", placeholder: "••••••••" %>
        </div>
      </div>

      <div class="mt-6">
        <%= f.submit "Sign in", class: "group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-150 ease-in-out" %>
      </div>
    <% end %>
  </div>
</div>
